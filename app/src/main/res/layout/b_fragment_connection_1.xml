<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VISUAL_ACTIVITY_1_LOGIN.ConnexionEmail"
    android:background="@color/purple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30px">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30px"
            android:layout_marginBottom="30px"
            android:src="@drawable/ic_logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Erreur"
            android:layout_above="@+id/email"
            android:layout_centerHorizontal="true"
            android:textColor="@color/red"/>

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Logo"
            android:layout_centerHorizontal="true"
            android:background="@color/purple_5"
            android:hint="Email :"
            android:padding="20px"
            android:textColor="@color/white" />


    <RelativeLayout
        android:id="@+id/buttonGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <Button
                    android:layout_weight="1"
                    android:id="@+id/Suivant"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttton_height"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_corner"
                    android:text="Login" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/Inscription"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/buttton_height"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/Suivant"
                    android:background="@drawable/button_corner_second"
                    android:layout_marginLeft="20px"
                    android:text="Register" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

        <TextView
            android:id="@+id/Oublie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="Forget Password ?" />
    </RelativeLayout>

</FrameLayout>