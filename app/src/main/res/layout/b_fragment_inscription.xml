<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VISUAL_ACTIVITY_1_LOGIN.Inscription"
    android:background="@color/purple">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="30px">

            <Button
                android:id="@+id/Retour"
                android:layout_width="@dimen/buttton_back"
                android:layout_height="@dimen/buttton_back"
                android:background="@drawable/back_foreground" />

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30px"
                android:layout_marginBottom="30px"
                android:src="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Erreur"
                android:layout_above="@+id/Email"
                android:layout_centerHorizontal="true"
                android:textColor="@color/red"/>

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Logo"
                android:layout_centerHorizontal="true"
                android:background="@color/purple_5"
                android:hint="Email :"
                android:padding="20px"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@color/purple_5"
                android:hint="Mot de Passe :"
                android:padding="20px"
                android:textColor="@color/white" />


            <Button
                android:id="@+id/Inscription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttton_height"
                android:layout_below="@+id/Password"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/button_corner"
                android:text="Inscription" />

        </RelativeLayout>
    </ScrollView>
</FrameLayout>